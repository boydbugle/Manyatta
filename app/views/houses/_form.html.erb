<%= form_for(house) do |f| %>
<% if house.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(house.errors.count, "error") %>
    prohibited this house from being saved:</h2>

  <ul>
    <% house.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :description %>
  <%= f.text_area :description %>
</div>

<div class="field">
  <%= f.label :bedrooms %>
  <%= f.number_field :bedrooms %>
</div>

<div class="field">
  <%= f.label :minimumstay %>
  <%= f.number_field :minimumstay %>
</div>

<div class="field">
  <%= f.label :telephone %>
  <%= f.number_field :telephone %>
</div>

<div class="field">
  <%= f.label :location %>
  <%= f.text_field :location %>
</div>

<div class="field">
  <%= f.label :street %>
  <%= f.text_field :street %>
</div>

<div class="field">
  <%= f.label :rules %>
  <%= f.text_area :rules %>
</div>

<div class="field">
  <%= f.label :ammenities %>
  <%= f.text_area :ammenities %>
</div>

<div class="field">
  <%= f.label :price %>
  <%= f.number_field :price %>
</div>

<div class="field">
  <%= f.label :images%>
  <%= f.file_field :images, multiple: true%>
</div>

<div class="actions">
  <%= f.submit %>
</div>
<% end %>
