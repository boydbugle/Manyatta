<p id="notice"><%= notice %></p>

<h1>Houses</h1>
<% @houses.each do |house|%>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>owner</th>
      <th>Description</th>
      <th>Telephone</th>
      <th>Street</th>
      <th>Rules</th>
      <th>Ammenities</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= house.name %></td>
      <td><%= house.user.name%></td>
      <td><%= house.description %></td>
      <td><%= house.telephone %></td>
      <td><%= house.street %></td>
      <td><%= house.rules %></td>
      <td><%= house.ammenities %></td>
      <td><%= house.price %></td>
      <td><%= link_to 'View', house %></td>
      <td><%= link_to 'Edit', edit_house_path(house) %></td>
      <td><%= link_to 'Destroy', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  </tbody>
</table>
<%end%>
<br>

<%= link_to 'New House', new_house_path %>

<!-- container for the search -->
<div class="container search">
  <%= form_tag(houses_path, :method => "get", id: "search-form") do %>

  <div class="input-group input-group-lg">

    <%= text_field_tag :search, params[:search], placeholder: "Search for a location.....", class:"form-control"%>

    <span class="input-group-btn">

      <button type="button" name="button" class="btn btn-default btn-lg" <%= submit_tag "Search", :location => nil%>Search</button>

    </span>

  </div>
  <% end %>

</div>
<!-- container for the search -->
<div class="container locations">

  <div class="row location-area">
    <%@houses.each do |house|%>
    <!-- link to show -->
    <%= link_to house_path(house), :action => 'go' do %>
    <div class="col-xs-12 col-sm-3 col-md-4 col-lg-4 img-thumbnail">
      <div class="thumbnail">
        <img <%= image_tag house.images[0].url%>
      </div>
      <h3><%= house.name%></h3>
      <%=rating_for house, "experience", target:'#hintDiv',targetFormat: "Score: {score}", disable_after_rate: false%>

      <div id="hintDiv"></div>

      <h4>
        <span class="house-location"><%= house.location%></span>
        <span class="price">Ksh:<%= house.price%></span>
      </h4>

    </div>
    <%end%>
    <!-- end link -->
    <%end%>
  </div>
</div>
